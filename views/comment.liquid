{% block content %}
  <div class="card mb-4 shadow">
    <div class="card-body">
      <p>{{ comm.note }}</p>
      <p>- {{ comm.author.username }}</p>
      <p>
        {{ comm.createdAt }}
      </p>
      {% if comm.author == userId %}
        <form action="/comments/delete/{{fruit.id}}/{{comm.id}}?_method=DELETE" method="POST">
          <input
            class="btn btn-danger"
            type="submit"
            value="X">
        </form>
      {% endif %}
    </div>
  </div>
{% endblock %}