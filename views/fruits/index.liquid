{% layout 'layout.liquid' %}
{% block content %}
  <!-- we need to account for two conditions here -->
  <!-- first, if we have fruits in our array -->
  <!-- second, if there are no fruits in the array -->
    {% if fruits.length > 0 %}
      <div class="container-md"> <h2>All Fruits</h2>
      <div class="row">
        {% for fruit in fruits %}
          <div class="card me-3 mb-3" style="width:18rem">
            <h5 class="card-header">{{ fruit.name }}
            </h5>
            <div class="card-body">
              <p class="card-text">The color of this {{ fruit.name }} is {{ fruit.color }}. It is owned by {{ fruit.owner.username }}</p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% else %}
    <h2>No fruits yet... Go create some!</h2>
  {% endif %}
{% endblock %}